<div id="canvas-container">
  <canvas></canvas>
  <canvas class="overlay"></canvas>
</div>

<style lang="scss">
  @keyframes fade-out {
    from {
      opacity: 1;
    }
    to {
      opacity: 0;
      display: none;
    }
  }

  #canvas-container {
    position: relative;
    width: 100%;

    & canvas {
      -webkit-touch-callout: none;
      -webkit-user-select: none;

      object-fit: contain;
      width: 100%;
      height: 100%;
    }

    & .overlay {
      position: absolute;
      inset: 0;

      &.fade-out {
        animation: fade-out 500ms 500ms linear forwards;
      }
    }
  }
</style>
